    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="row">
      <div class="col-3">
        <%= link_to root_path, class: 'logo' do %>
          <div class="circle">
              <br />
              DIG
              <br />
              DUG
              <br />
              DIG
          </div>
          <% end %>

      </div>
      <div class="col-4 slogan">
        The Number One Quote Generator of the Powder Nation
      </div>
      <div class="col-5 links">
        <%= link_to 'Contribute', new_quotes_path %>
        <%= link_to 'About', '#' %>
